#ifndef _ABSTRACT_ELECTRODE_H
#define _ABSTRACT_ELECTRODE_H

#include <protomol/type/Vector3D.h>
#include <vector>
#include <string>
#include <bitset>

using namespace std;
using namespace ProtoMol;

namespace ProtoMolAddon {

  class AbstractElectrode {
  public:
    string label;

  public:
    AbstractElectrode(const string& label): label(label) {};
    virtual ~AbstractElectrode() {};
    virtual double GetNNPotential(const Vector3D& pos, const std::vector<int>& offset) const = 0;
    virtual double GetNNVoltage(double time, int offset) const = 0;
    virtual void DumpInfo(ostream& os) = 0;
    
  };
}

#endif
