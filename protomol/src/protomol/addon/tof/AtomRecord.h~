#ifndef _ATOM_RECORD_H
#define _ATOM_RECORD_H

#include <protomol/type/Vector3D.h>
#include <string>

using namespace ProtoMol;

namespace ProtoMolAddon {
  
  namespace ToF {
    
    class AtomRecord {
    public:
      const string &name;
      const Vector3DB &pos;
      const Vector3DB &vel;

      Vector3DB pos_hit;
      Vector3DB vel_hit;

      double time;
      int status;

    public:
      AtomRecord(const string &name, const Vector3DB &pos, const Vector3DB &vel);
      friend ostream& operator<< (ostream &os, const AtomRecord &r);
    };

  }
}

#endif
